doctype html
html
	head
		link(rel='stylesheet', href='css/style.css' )
		title= title
		meta(charset="UTF-8")
		meta(name="description", content="HTML Template")
		meta(name="keywords", content="HTML,CSS,JavaScript")
		meta(name="author", content="Andreas Roessler, HS Esslingen")
	body
		header
			h2 Job Kiosk
		section#content
			nav
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
						span.icon-bar
						| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
						span.icon-bar
						| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
						span.icon-bar
				
				-each val, key in links
					-if (id == key)
						div.activebutton
							a(href='#{key}') #{val}
					-else            
						div.button
							a(href='#{key}') #{val}
			block content
		footer
			div.centercontent
				a(href='/impressum') Impressum
				span= views
				span= auth

		script(src='js/lib.js')
		script(src='js/realtime.js')
		block scripts
